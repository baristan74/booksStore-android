<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.BooksBasketFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booksBasketRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

<androidx.cardview.widget.CardView
    android:id="@+id/satinAlBTNCardView"
    android:layout_width="75dp"
    android:layout_height="75dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="30dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/satinAlBTN"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/gradiyent_pay"
        android:src="@drawable/ic_checkout"/>

</androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>